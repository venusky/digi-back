generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Societe {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  name          String     @db.VarChar(255)
  adress        String?
  email         String?
  website       String?
  phone         String?
  NAF           String?
  capital       Float      @default(0.0)
  country       String?
  city          String?
  taxeImma      String?
  manager       String?
  managerPhone  String?
  typeJuridique String?
  commande      Commande[]
  user          User[]
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String
  name      String
  firstname String
  password  String
  companyId Int
  token     String
  company   Societe  @relation(fields: [companyId], references: [id])
}

model Cgu {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  libelle   String
  titre     String
  status    Boolean    @default(true)
  commande  Commande[]
}

model Client {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  matricule    String     @unique
  fullname     String
  companyName  String?
  adressPostal String?
  phone        String?
  email        String?
  iban         String?
  tva          Boolean    @default(false)
  commande     Commande[]
}

model Commande {
  id             Int                      @id @default(autoincrement())
  createdAt      DateTime                 @default(now())
  updatedAt      DateTime                 @updatedAt
  code           String
  taxe           Float                    @default(0.0)
  servicePrice   Float                    @default(0.0)
  payementMethod String?
  ownerName      String
  beginDate      DateTime?
  endDate        DateTime?
  horsTaxe       Float                    @default(0.0)
  time           Float?
  TTC            Float?                   @default(0.0)
  taxeService    Float                    @default(0.0)
  conditionId    Int
  clientId       Int
  societeId      Int
  cardNumber     String
  Articles       Articles[]
  client         Client                   @relation(fields: [clientId], references: [id])
  condition      Cgu                      @relation(fields: [conditionId], references: [id])
  societe        Societe                  @relation(fields: [societeId], references: [id])
  prelevements   PrelevementOnCommandes[]
}

model Articles {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  libelle    String
  details    String?
  unitPrice  Float    @default(0.0)
  quantity   Float    @default(0.0)
  commandeId Int
  commande   Commande @relation(fields: [commandeId], references: [id])
}

model Prelevement {
  id           Int                      @id @default(autoincrement())
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt
  amount       Float                    @default(0.0)
  method       String?
  prelevements PrelevementOnCommandes[]
}

model PrelevementOnCommandes {
  commandeId    Int
  prelevementId Int
  assignedAt    DateTime    @default(now())
  commande      Commande    @relation(fields: [commandeId], references: [id])
  prelevement   Prelevement @relation(fields: [prelevementId], references: [id])

  @@id([commandeId, prelevementId])
}
